<div class="container p-4 login-page ">
	<div class="row justify-content-center ">
		<div class="col-md-6 col-md-9 ">
			<div class="wrap d-md-flex">
				<div class="img w-50 border">
				</div>
				<div class="login-wrap p-4 p-md-5 bg-white">
					<div class="d-flex">
						<div class="w-100">
							<h3 class="mb-4">Sign In</h3>
						</div>
						<div class="w-100">
							<p class="social-media d-flex justify-content-end">
								<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
								<a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
							</p>
						</div>
					</div>
					<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'signin-form') do |f| %>
						<div class="form-group mb-3">
							<%= f.label :email, class:'label' %>
							<%= f.email_field :email, class:'form-control', autofocus: true, autocomplete: "email" %>
						</div>
						<div class="form-group mb-3">
							<%= f.label :password, class:'label' %>
							<%= f.password_field :password, class:'form-control', autocomplete: "current-password" %>
						</div>
						<% if devise_mapping.rememberable? %>
						<div class="form-group d-md-flex">
							<div class="w-50 text-left">
								<label class="checkbox-wrap checkbox-primary mb-0">Remember Me
								<%= f.check_box :remember_me %>
								<span class="checkmark"></span>
								</label>
							</div>
						</div>
					<% end %>
					<div class="actions">
						<%= f.submit "Log in", class:'btn btn-primary' %>
					</div>
					<% end %>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>