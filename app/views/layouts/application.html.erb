<!DOCTYPE html>
<html>
  <head>
    <title>CloneLetterboxd</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag "styles", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.rtl.min.css" />
  </head>

  <body>
  <% flash.each do |key, message| %>
    <% if message.kind_of?(Array) %>
      <div class="alert <%= flash_class(key) %> alert-dismissible text-center" id="alert">
        <ul>
          <% message.each do |messagem| %>
            <li><%= messagem %></li>
          <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>


    <% else %>

    <%= turbo_frame_tag "flash" do %>
      <div class="alert <%= flash_class(key) %> alert-dismissible text-center" >
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <% end %>
  <% end %>
    <%= render 'layouts/shared/header' %>
    <main>
    <%= yield %>

    </main>
  </body>
</html>
