<!DOCTYPE html>
<html>
  <head>
    <title>CloneLetterboxd</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag "https://unpkg.com/tabulator-tables@6.2.1/dist/css/tabulator.min.css", rel:"stylesheet" %>
    <%= javascript_include_tag "https://unpkg.com/tabulator-tables@6.2.1/dist/js/tabulator.min.js", type:"text/javascript" %>
  </head>

  <body>
  <% flash.each do |key, message| %>
    <% if message.kind_of?(Array) %>
      <div class="alert <%= flash_class(key) %> alert-dismissible text-center" id="alert">
        <ul>
          <% message.each do |messagem| %>
            <li><%= messagem %></li>
          <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>


    <% else %>

    <%= turbo_frame_tag "flash" do %>
      <div class="alert <%= flash_class(key) %> alert-dismissible text-center" >
        <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>
    <% end %>
  <% end %>
    <main>

    <%= yield %>

    </main>
  </body>
</html>
